<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".GameDetailsActivity">

    <TextView
            android:id="@+id/game_info"
            android:text="GAME INFO"
            android:textSize="30dp"

            android:textColor="#0000FF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" tools:layout_editor_absoluteY="16dp"/>

    <TextView
            android:id="@+id/game_name_label"
            android:text="Name: "
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/game_info"
            app:layout_constraintRight_toLeftOf="@id/game_name"
            app:layout_constraintBottom_toTopOf="@id/game_type_label"/>

    <TextView
            android:id="@+id/game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"

            app:layout_constraintTop_toTopOf="@id/game_name_label"
            app:layout_constraintLeft_toRightOf="@id/game_name_label"/>

    <TextView
            android:id="@+id/game_type_label"
            android:text="Type: "
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/game_name_label"
            app:layout_constraintRight_toLeftOf="@id/game_type"
            app:layout_constraintBottom_toTopOf="@id/game_type_label"/>

    <TextView
            android:id="@+id/game_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"

            app:layout_constraintTop_toTopOf="@id/game_type_label"
            app:layout_constraintLeft_toRightOf="@id/game_type_label"/>

    <TextView
            android:id="@+id/game_players_label"
            android:text="Players: "
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/game_type_label"
            app:layout_constraintRight_toLeftOf="@id/game_players"
            app:layout_constraintBottom_toTopOf="@id/game_year_label"/>

    <TextView
            android:id="@+id/game_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"

            app:layout_constraintTop_toTopOf="@id/game_players_label"
            app:layout_constraintLeft_toRightOf="@id/game_players_label"/>

    <TextView
            android:id="@+id/game_year_label"
            android:text="Year: "
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/game_players_label"
            app:layout_constraintRight_toLeftOf="@id/game_year"
            app:layout_constraintBottom_toTopOf="@id/game_desc"/>

    <TextView
            android:id="@+id/game_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"

            app:layout_constraintTop_toTopOf="@id/game_year_label"
            app:layout_constraintLeft_toRightOf="@id/game_year_label"/>

    <TextView
            android:id="@+id/game_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/game_year_label"/>

</android.support.constraint.ConstraintLayout>