<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.constraint.Guideline
            android:id="@+id/left_vertical_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>

    <android.support.constraint.Guideline
            android:id="@+id/middle_vertical_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50"/>

    <android.support.constraint.Guideline
            android:id="@+id/right_vertical_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>

    <android.support.constraint.Guideline
            android:id="@+id/top_horizontal_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25"/>

    <android.support.constraint.Guideline
            android:id="@+id/middle_horizontal_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.50"/>

    <android.support.constraint.Guideline
            android:id="@+id/bottom_horizontal_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75"/>

    <Button
            android:id="@+id/game1_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toBottomOf="@id/top_horizontal_border"
            app:layout_constraintBottom_toBottomOf="@id/middle_horizontal_border"
            app:layout_constraintLeft_toLeftOf="@id/left_vertical_border"
            app:layout_constraintRight_toLeftOf="@id/middle_vertical_border"
    />

    <Button
            android:id="@+id/game2_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toBottomOf="@id/top_horizontal_border"
            app:layout_constraintBottom_toBottomOf="@id/middle_horizontal_border"
            app:layout_constraintLeft_toLeftOf="@id/middle_vertical_border"
            app:layout_constraintRight_toLeftOf="@id/right_vertical_border"
    />

    <Button
            android:id="@+id/game3_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toBottomOf="@id/middle_horizontal_border"
            app:layout_constraintBottom_toBottomOf="@id/bottom_horizontal_border"
            app:layout_constraintLeft_toLeftOf="@id/left_vertical_border"
            app:layout_constraintRight_toLeftOf="@id/middle_vertical_border"
    />

    <Button
            android:id="@+id/game4_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toBottomOf="@id/middle_horizontal_border"
            app:layout_constraintBottom_toBottomOf="@id/bottom_horizontal_border"
            app:layout_constraintLeft_toLeftOf="@id/middle_vertical_border"
            app:layout_constraintRight_toLeftOf="@id/right_vertical_border"
    />

</android.support.constraint.ConstraintLayout>